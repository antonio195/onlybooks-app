<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinzaClaro"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".ui.fragments.CreateAudioBookFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_ebook"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded_edges_imageView_5" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_title"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_ebook">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_co_author"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_co_author"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_co_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_storyteller1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_primary_storyteller"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_co_author">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_storyteller1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_storyteller2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_secondary_storyteller"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_storyteller1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_storyteller2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_genre1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_genre1"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_storyteller2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_genre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_genre2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_genre2"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_genre1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_genre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_genre3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_genre3"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_genre2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_genre3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/text_input_parental_rating"
            android:textColor="@color/azulEscuro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_genre3" />

        <RadioGroup
            android:id="@+id/class_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_class">

            <RadioButton
                android:id="@+id/class_livre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_livre"
                android:drawablePadding="2dp"
                android:fontFamily="@font/source_sans_pro"

                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

            <RadioButton
                android:id="@+id/class_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_10"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

            <RadioButton
                android:id="@+id/class_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_12"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

            <RadioButton
                android:id="@+id/class_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_14"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

            <RadioButton
                android:id="@+id/class_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_16"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

            <RadioButton
                android:id="@+id/class_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/class_indicativa_18"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/azulEscuro"
                app:buttonTint="@color/azulEscuro" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_sinopse"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_input_synopsis"
            android:minHeight="100dp"
            android:textColorHint="@color/azulEscuro"
            app:boxStrokeColor="@color/azulEscuro"
            app:counterTextColor="@color/azulEscuro"
            app:hintTextColor="@color/azulEscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/class_radio_group">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_sinopse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:minHeight="100dp"
                android:textColor="@color/azulEscuro"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/send_book_image"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/azulEscuro"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_button_select_cover"
            android:paddingVertical="10dp"
            android:textColorHint="@color/cinzaClaro"
            android:textSize="20sp"
            app:iconPadding="10dp"
            app:iconTint="@color/azulEscuro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_sinopse"
            app:rippleColor="@color/azulClaro" />

        <Button
            android:id="@+id/publish_ebook"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/azulEscuro"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/text_button_publish"
            android:paddingVertical="10dp"
            android:textColorHint="@color/cinzaClaro"
            android:textSize="20sp"
            app:iconPadding="10dp"
            app:iconTint="@color/azulEscuro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_book_image"
            app:rippleColor="@color/azulClaro" />

        <TextView
            android:id="@+id/info_box_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/text_info_box_publish"
            android:textAlignment="center"
            android:textColor="@color/azulEscuro"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/publish_ebook"
            app:layout_constraintStart_toStartOf="@id/publish_ebook"
            app:layout_constraintTop_toBottomOf="@id/publish_ebook" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>