<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="none"
    tools:context=".ui.fragments.StorageFileEbookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_ebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/source_sans_pro"
            android:text="Nome do Ebook"
            android:textAlignment="center"
            android:textColor="@color/azulEscuro"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banner_ebook"
                android:layout_width="190dp"
                android:layout_height="266dp"
                android:layout_marginStart="96dp"

                android:background="@drawable/ic_launcher_background"
                android:scaleType="fitXY" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/select_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azulEscuro"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Selecionar Áudio"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:textColorHint="@color/cinzaClaro"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/upload_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:backgroundTint="@color/azulEscuro"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Enviar Áudio"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:textColorHint="@color/cinzaClaro"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>