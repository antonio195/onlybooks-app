<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cinzaClaro"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_see_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/cinzaClaro"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Ver foto"
        android:textAlignment="center"
        android:textColorHint="@color/azulEscuro"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_change_photo"
        app:layout_constraintEnd_toStartOf="@id/btn_change_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/azulClaro"
        app:strokeColor="@color/azulEscuro"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_change_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cinzaClaro"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Trocar foto"
        android:textAlignment="center"
        android:textColorHint="@color/azulEscuro"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_see_photo"
        app:rippleColor="@color/azulClaro"
        app:strokeColor="@color/azulEscuro"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>