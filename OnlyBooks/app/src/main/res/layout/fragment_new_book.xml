<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/cinzaClaro"
    tools:context=".ui.fragments.NewBookFragment">

    <Button
        android:id="@+id/createEbook"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/azulClaro"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Ebook"
        android:textAlignment="center"
        android:textColorHint="@color/azulEscuro"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/azulClaro" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="O que deseja publicar?"
        android:textAlignment="center"
        android:textColor="@color/azulEscuro"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/createAudioBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createEbook" />

    <Button
        android:id="@+id/createAudioBook"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/azulClaro"
        android:fontFamily="@font/source_sans_pro"
        android:hint="AudioBook"
        android:textAlignment="center"
        android:textColorHint="@color/azulEscuro"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_info"
        app:rippleColor="@color/azulClaro" />


</androidx.constraintlayout.widget.ConstraintLayout>