<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinzaClaro"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Configurações"
            android:textAlignment="center"
            android:textColor="@color/azulEscuro"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_profile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cinzaClaro"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Editar perfil"
            android:textAlignment="textStart"
            android:textColorHint="@color/azulEscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_edit_24"
            app:iconPadding="10dp"
            app:iconTint="@color/azulEscuro"
            app:rippleColor="@color/azulClaro" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azulEscuro" />

        <Button
            android:id="@+id/change_photo_profile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cinzaClaro"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Trocar foto do perfil"
            android:textAlignment="textStart"
            android:textColorHint="@color/azulEscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_photo_camera_24"
            app:iconPadding="10dp"
            app:iconTint="@color/azulEscuro"
            app:rippleColor="@color/azulClaro" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azulEscuro" />

        <Button
            android:id="@+id/logof"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cinzaClaro"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Logof"
            android:textAlignment="textStart"
            android:textColorHint="@color/azulEscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_logout_24"
            app:iconPadding="10dp"
            app:iconTint="@color/azulEscuro"
            app:rippleColor="@color/azulClaro" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azulEscuro" />
    </LinearLayout>

</ScrollView>